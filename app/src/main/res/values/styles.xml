<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:windowBackground">@drawable/background_light</item>

    </style>
    <style name="AppThemeLightNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_dark</item>
        <!--item name="android:textColor">@android:color/white</item-->
        <item name="android:textColor">@drawable/list_selector_text</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Dark</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <!--item name="android:itemBackground">@android:color/background_dark</item-->
        <item name="android:itemBackground">@drawable/menu_selector</item>
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>


        <item name="android:alertDialogTheme">@style/AlertDialog</item>

    </style>
    <style name="AppThemeDarkNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
        <item name="android:buttonBarStyle">@style/MyButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/MyBorderlessButton</item>
    </style>

    <style name="MyAlertTextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="MyBorderlessButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyButtonBar">
        <item name="android:background">@android:color/holo_orange_light</item>
    </style>



    <style name="MenuTextStyle">
        <item name="android:textColor">@drawable/list_selector_text</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />



    <style name="ListViewStyle.Dark" parent="android:style/Widget.ListView">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:divider">@drawable/list_divide</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#ff0000</item>
    </style>


</resources>
